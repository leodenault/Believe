<?xml version="1.0" encoding="UTF-8"?>
<nifty 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../config/nifty-1.3.xsd">
	
	<useControls filename="musicGame/gui/MenuSelection.xml"/>
	<useControls filename="musicGame/gui/TextMessage.xml"/>
	<useControls filename="musicGame/gui/VerticalKeyboardScrollpanel.xml"/>
	<useControls filename="nifty-default-controls.xml"/>
	<useStyles filename="musicGame/gui/MenuSelectionStyle.xml"/>
	<useStyles filename="musicGame/gui/TextMessageStyle.xml"/>
	<useStyles filename="musicGame/gui/VerticalKeyboardScrollpanelStyle.xml"/>
	<useStyles filename="nifty-default-styles.xml"/>
	
	<screen id="FlowFilePickerMenuState" controller="musicGame.menu.FlowFilePickerMenuState">
		<layer childLayout="vertical" padding="10px">
			<panel align="left" childLayout="center" marginBottom="10px">
				<control id="back" name="menuSelection" label="Back" width="200px" height="50px"/>
			</panel>
			<panel align="center" childLayout="center" paddingLeft="50px">
				<control id="contentPanel" name="verticalKeyboardScrollpanel" height="500px" gap="10px"/>
			</panel>
		</layer>
	</screen>
</nifty>