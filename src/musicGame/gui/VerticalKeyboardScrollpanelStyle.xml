<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../config/nifty-styles-1.3.xsd">
	
	<style id="verticalKeyboardScrollpanel-border">
		<attributes backgroundColor="#898989" childLayout="center" padding="5px" width="100%" height="100%"/>
	</style>
	<style id="verticalKeyboardScrollpanel-background">
		<attributes backgroundColor="#000000" childLayout="horizontal" width="100%" height="100%"/>
	</style>
	<style id="verticalKeyboardScrollpanel-childRoot">
		<attributes childLayout="vertical" width="95%" height="100%" childClip="true"
			marginLeft="1%" marginRight="1%"/>
	</style>
	<style id="verticalKeyboardScrollpanel-scrollArea">
		<attributes backgroundColor="#000057" childLayout="center" padding="2px" width="3%" height="100%"/>
	</style>
	<style id="verticalKeyboardScrollpanel-scroller">
		<attributes backgroundColor="#00ff00" childLayout="center" width="100%" height="70px"/>
	</style>
</nifty-styles>