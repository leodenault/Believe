<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../config/nifty-styles-1.3.xsd">
	
	<style id="menuSelection-border">
		<attributes backgroundColor="#cf0498" childLayout="center" width="500px" height="100px" padding="5px"/>
	</style>
	<style id="menuSelection-active-border">
		<attributes backgroundColor="#ffffff" childLayout="center" width="500px" height="100px" padding="5px"/>
	</style>
	<style id="menuSelection-background">
		<attributes backgroundColor="#0cffb2" childLayout="center" width="100%" height="100%"/>
	</style>
	<style id="menuSelection-active-background">
		<attributes backgroundColor="#ff0000" childLayout="center" width="100%" height="100%"/>
	</style>
	<style id="menuSelection-text">
		<attributes color="#cf0498" font="aurulent-sans-16.fnt"/>
	</style>
	<style id="menuSelection-active-text">
		<attributes color="#ffffff" font="aurulent-sans-16.fnt"/>
	</style>
</nifty-styles>